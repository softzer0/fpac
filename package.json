{
  "name": "fpac-currency-system",
  "version": "1.0.0",
  "description": "FAIT-Pegged Autonomous Currency - A blockchain-based stable currency system",
  "main": "index.js",
  "scripts": {
    "build": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy:sepolia": "npx hardhat run scripts/deploy.ts --network sepolia",
    "deploy:mainnet": "npx hardhat run scripts/deploy.ts --network mainnet",
    "verify": "npx hardhat run scripts/verify.ts",
    "console:sepolia": "npx hardhat console --network sepolia",
    "console:mainnet": "npx hardhat console --network mainnet",
    "oracle:start": "cd oracle-agent && npm run start",
    "oracle:build": "cd oracle-agent && npm run build"
  },
  "keywords": [
    "blockchain",
    "cryptocurrency",
    "stablecoin",
    "defi",
    "ethereum",
    "hardhat",
    "oracle"
  ],
  "author": "FPAC Development Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/node": "^20.0.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "@openzeppelin/contracts-upgradeable": "^5.0.0",
    "dotenv": "^16.3.0",
    "ethers": "^6.8.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
